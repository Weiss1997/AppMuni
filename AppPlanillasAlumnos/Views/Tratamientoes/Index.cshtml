@model IEnumerable<AppPlanillasAlumnos.Models.Tratamiento>

@*@{
        ViewBag.Title = "Index";
    }*@

<h2 class="text-center text-uppercase text-dark letratitulo">Tratamiento</h2>

<div class="modal fade" id="ModalTratamiento" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content-2">
            <div class="modal-header-2">
                <h5 class="modal-title text-white" id="exampleModalLabel">TRATAMIENTO</h5>
                <button type="button" class="CruzBlanca" onclick="VaciarFormulario()" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body-2">
                <div class="cardfondoclaro tab-content">
                    <div class="row">
                        <div class="col-lg-6">
                            <label class="control-label TextoNegroFormulario">Paciente <span class="rojo">*</span></label>
                            <input type="hidden" id="PacienteID" name="PacienteID" value="0" />
                            <input id="PacienteNombre" autocomplete="off" class="form-control form-control-rounded" onKeyUp="ControlarAutocompletadoPaciente()" onKeyDown="ControlarAutocompletadoPaciente()" style="text-transform:uppercase">
                            <label id="campo-obligatorio-PacienteID" class="control-label ocultar validaciones">* Campo Obligatorio</label>
                            <label id="PacienteExiste" class="control-label ocultar FondoValidaciones validaciones">Ya se encuentra este paciente en el tratamiento</label>
                        </div>
                        <div class="col-lg-6">
                            <label class="control-label TextoNegroFormulario">Profesional <span class="rojo">*</span></label>
                            <input type="hidden" id="ProfesionalID" name="ProfesionalID" value="0" />
                            <input id="ProfesionalNombre" autocomplete="off" class="form-control  form-control-rounded" style="text-transform:uppercase" />
                            <label id="campo-obligatorio-ProfesionalID" class="control-label ocultar validaciones">* Campo Obligatorio</label>
                        </div>
                        <div class="col-lg-6 ">
                            <label class="control-label TextoNegroFormulario">Tratamiento Anterior</label>
                            <input type="hidden" id="TratamientoID" name="TratamientoID" value="0" />
                            <p><textarea autocomplete="off" class="form-control" rows="8" style="text-transform:uppercase" id="TratamientoAnterior"></textarea></p>
                        </div>
                        <div class="col-lg-6">
                            <label class="control-label TextoNegroFormulario">Tratamiento Actuales <span class="rojo">*</span></label>
                            <p><textarea autocomplete="off" class="form-control" rows="8" style="text-transform:uppercase" id="TratamientoActuales"></textarea></p>
                            <label id="campo-obligatorio-TratamientoActuales" class="control-label ocultar validaciones">* Campo Obligatorio</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer-2">
                    <button class="BotonCancelar-Modal" id="botoncancelar" onclick="VaciarFormulario()" data-dismiss="modal">
                        <img src="~/Content/dashtreme-master/assets/images/iconos menu/cerrar.png" class="icono-menu" />
                    </button>
                    <button type="button" id="botonguardar" onclick="GuardarTratamiento()" class="BotonGuardar-Modal">
                        <img src="~/Content/dashtreme-master/assets/images/iconos menu/salvar.png" class="icono-menu" />
                    </button>
                    <button class="ocultar BotonVolver " id="BotonVolver" onclick="VaciarFormulario()" data-dismiss="modal">
                        <img src="~/Content/dashtreme-master/assets/images/iconos menu/regreso.png" class="icono-menu" />
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Barra de busqueda y crear nuevo tratamiento -->
<div class="row">
    <div class="col-12 col-md-4 EspaciadoBoton ">
        <input id="buscar" type="text" class="form-control BarraBusqueda form-controlCorto text-uppercase" autocomplete="off" autofocus placeholder="ESCRIBA AQUÍ PARA ACOTAR LA BUSQUEDA" />
    </div>
    <div class="col-auto">
