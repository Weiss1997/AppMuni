@section Scripts {
    <script>
        /PARA ACOTAR LA BUSQUEDA/
        document.querySelector("#buscar").onkeyup = function () {
            $TableFilter("#tabla", this.value);
        }

        $TableFilter = function (id, value) {
            var rows = document.querySelectorAll(id + ' tbody tr');

            for (var i = 0; i < rows.length; i++) {
                var showRow = false;

                var row = rows[i];
                row.style.display = 'none';

                for (var x = 0; x < row.childElementCount; x++) {
                    if (row.children[x].textContent.toLowerCase().indexOf(value.toLowerCase().trim()) > -1) {
                        showRow = true;
                        break;
                    }
                }

                if (showRow) {
                    row.style.display = null;
                }
            }
        }
    </script>

    <script>
        function GuardarPaciente() {
            var personaID = $("#PacientePersonaID").val();
            var pacienteDatosSignificativos = $("#PacienteDatosSignificativos").val();
            var pacienteCaracteristicas = $("#PacienteCaracteristicas").val();
            var pacienteEdadCaminar = $("#PacienteEdadCaminar").val();
            var pacienteControlEsfinter = $("#PacienteControlEsfinter").val();
            var pacienteLenguaje = $("#PacienteLenguaje").val();
            var pacienteLenguajeGestual = $("#PacienteLenguajeGestual").val();
            var pacienteLenguajeOral = $("#PacienteLenguajeOral").val();
            var pacienteIntelecto = $("#PacienteIntelecto").val();
            var pacienteID = $("#PacienteID").val();

            //CAMPOS OBLIGATORIOS EN EL MODAL//
            $("#campo-obligatorio-PersonaID").addClass("ocultar");
            $("#campo-obligatorio-PacienteDatosSignificativos").addClass("ocultar");
            $("#campo-obligatorio-PacienteEdadCaminar").addClass("ocultar");
            $("#campo-obligatorio-PacienteCaracteristicas").addClass("ocultar");

            var guardar = true;

            if (personaID == 0) {
                guardar = false;
                $("#campo-obligatorio-PersonaID").removeClass("ocultar");
            }

            if (pacienteDatosSignificativos == "") {
                guardar = false;
                $("#campo-obligatorio-PacienteDatosSignificativos").removeClass("ocultar");
            }

            if (pacienteEdadCaminar == "") {
                guardar = false;
                $("#campo-obligatorio-PacienteEdadCaminar").removeClass("ocultar");
            }

            if (pacienteCaracteristicas == "") {
                guardar = false;
                $("#campo-obligatorio-PacienteCaracteristicas").removeClass("ocultar");
            }

            if (guardar == true) {

                $.ajax({
                    type: "POST",
                    url: '../../Pacientes/GuardarPaciente',
                    data: {
                        PersonaID: personaID, PacienteDatosSignificativos: pacienteDatosSignificativos,
                        PacienteCaracteristicas: pacienteCaracteristicas, PacienteEdadCaminar: pacienteEdadCaminar,
                        PacienteControlEsfinter: pacienteControlEsfinter, PacienteLenguaje: pacienteLenguaje,
                        PacienteLenguajeGestual: pacienteLenguajeGestual, PacienteLenguajeOral: pacienteLenguajeOral,
                        PacienteIntelecto: pacienteIntelecto, PacienteID: pacienteID,
                    },
                    success: function (guardado) {
                        if (guardado == true) {
                            VaciarModalPaciente();
                            BuscarListadoPaciente();
                            Swal.fire({
                                position: 'center',
                                icon: 'success',
                                title: 'El Paciente  Fue guardado Correctamente',
                                showConfirmButton: false,
                                timer: 1500
                            })
                            $("#ModalPacientes").modal("hide");

                        }
                        else {
                            $("#PersonaExiste").removeClass("ocultar");
                        }
                    },
                    error: function (data) {

                    }
                });

            }
        }

        function VaciarModalPaciente() {
            $("#PacientePersonaID").val(0);
            $("#PacienteDatosSignificativos").val('');
            $("#PacienteCaracteristicas").val('');
            $("#PacienteEdadCaminar").val('');
            $("#PacienteControlEsfinter").val('');
            $("#PacienteLenguaje").val('');
            $("#PacienteLenguajeGestual").val('');
            $("#PacienteLenguajeOral").val('');
            $("#PacienteIntelecto").val('');
            $("#PacienteID").val(0);
            $("#PacientePersonaNombre").val('');
            $("#PersonaExiste").addClass("ocultar");
            $("#BotonCrearPersona").removeClass("ocultar");

            $("#campo-obligatorio-PacienteDatosSignificativos").addClass("ocultar");
            $("#campo-obligatorio-PacienteCaracteristicas").addClass("ocultar");
            $("#campo-obligatorio-PacienteEdadCaminar").addClass("ocultar");
            $("#campo-obligatorio-PacienteControlEsfinter").addClass("ocultar");
            $("#campo-obligatorio-PacienteLenguaje").addClass("ocultar");
            $("#campo-obligatorio-PacienteLenguajeGestual").addClass("ocultar");
            $("#campo-obligatorio-PacienteLenguajeOral").addClass("ocultar");
            $("#campo-obligatorio-PacienteIntelecto").addClass("ocultar");
            $("#campo-obligatorio-PersonaNombre").addClass("ocultar");
